<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
 />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Family"
            android:textSize="20dp"
 />

        <androidx.recyclerview.widget.RecyclerView
            android:background="@color/amber_50"
            android:id="@+id/family_recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
 />

        <TextView
            android:layout_width="401dp"
            android:layout_height="34dp"
            android:layout_margin="5dp"
            android:text="City Worker"
            android:textSize="20dp" />


        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="5dp"
            android:id="@+id/city_worker_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
        <TextView
            android:layout_width="401dp"
            android:layout_height="34dp"
            android:layout_margin="5dp"
            android:text="Luxury"
            android:textSize="20dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/luxury_recyclerView"
            android:layout_width="397dp"
            android:layout_height="217dp" />
        <TextView
            android:layout_width="401dp"
            android:layout_height="34dp"
            android:layout_margin="5dp"
            android:text="Work Horse"
            android:textSize="20dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/work_horse_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
