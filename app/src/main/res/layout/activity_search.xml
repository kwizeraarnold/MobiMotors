<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Search by Make"
        android:textColor="#000000"
        android:textSize="25sp" />

    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="0dp"
        app:smsp_underlineSize="1dp"
        app:smsp_underlineColor="@color/grey_40"
        app:smsp_arrowColor="@color/grey_40"
        app:smsp_hint="Select Car"
        app:smsp_hintColor="@color/grey_90" />
    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="0dp"
        app:smsp_underlineSize="1dp"
        app:smsp_underlineColor="@color/grey_40"
        app:smsp_arrowColor="@color/grey_40"
        app:smsp_hint="Select Brand"
        app:smsp_hintColor="@color/grey_90"
        />
    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
        android:id="@+id/spinner3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="0dp"
        app:smsp_underlineSize="1dp"
        app:smsp_underlineColor="@color/grey_40"
        app:smsp_arrowColor="@color/grey_40"
        app:smsp_hint="Select Model"
        app:smsp_hintColor="@color/grey_90"
        />
    <Button
        android:id="@+id/search_button"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEARCH"/>
</LinearLayout>
